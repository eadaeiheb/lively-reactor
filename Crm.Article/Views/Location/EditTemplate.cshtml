@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions

<div class="modal-header card-header ch-alt">
	<button type="button" class="close" data-dismiss="modal" aria-label="@(Html.Localize("Close"))">
		<span aria-hidden="true">&times;</span>
	</button>
	<h4 class="modal-title" data-bind="visible: location().innerInstance.entityState === 20">@(Html.Localize("AddLocation"))</h4>
	<h4 class="modal-title" data-bind="visible: location().innerInstance.entityState !== 20">@(Html.Localize("EditLocation"))</h4>
</div>
<div class="modal-body card-body card-padding">
	<form role="form" data-bind="with: location">
		<form-element params="value: LocationNo, caption: 'LocationNo', type: 'text'"></form-element>
		<form-element id="StorageAreaId" params="value: StorageAreaId, caption: 'StorageArea'">
			<select name="StorageAreaId" class="form-control" data-bind="select2autocompleter: { data: value, autocompleteOptions: {table: 'CrmArticle_StorageArea', orderBy: ['StorageAreaNo'], customFilter: $root.storageAreaFilter.bind($root) , mapDisplayObject: function (s){ return { id: s.Id, text: s.StorageAreaNo, item: s.Id }; } } }, disable: disable"></select>
		</form-element>
	</form>
</div>
<div class="modal-footer card-header ch-alt p-15" >
	<button type="button" class="btn btn-lg btn-default f-13 waves-effect"  data-dismiss="modal" data-bind="click: cancel, disable: loading">
		@(Html.Localize("Cancel"))
	</button>
	<button type="button" class="btn btn-lg btn-primary f-13 waves-effect" data-bind="click: save, disable: loading">
		@(Html.Localize("Save"))
	</button>
</div>